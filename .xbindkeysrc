# toggle keynav (keyboard driven mouse)
"pkill keynav; keynav start"
    m:0x50 + c:47
    Mod2+Mod4 + semicolon

"rofi -show drun"
    m:0x50 + c:33
    Mod2+Mod4 + p

"rofi -show window"
    m:0x50 + c:32
    Mod2+Mod4 + o

# toggle keyboard layout (PC=¿ Laptop==)
"$HOME/.config/awesome/script/toggleKbLayout"
    m:0x50 + c:21
    Mod2+Mod4 + equal

# set dvorak layout (PC=¿ Laptop==)
"$HOME/.config/awesome/script/toggleKbLayoutDvorak"
    m:0x54 + c:21
    Control+Mod2+Mod4 + equal

# flameshot manual
"flameshot gui"
    m:0x10 + c:107
    Mod2 + Print

# flameshot full screenshot
"flameshot full -p $HOME/Pictures/"
    m:0x11 + c:107
    Shift+Mod2 + Print

# ===== volume control =====

# decrease
"pactl set-sink-volume @DEFAULT_SINK@ -3%"
    m:0x0 + c:122
    XF86AudioLowerVolume

# increase
"pactl set-sink-volume @DEFAULT_SINK@ +3%"
    m:0x0 + c:123
    XF86AudioRaiseVolume

# mute
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    m:0x10 + c:121
    Mod2 + XF86AudioMute

# ===== deadbeef =====

"deadbeef --prev"
    m:0x10 + c:173
    Mod2 + XF86AudioPrev

"deadbeef --next"
    m:0x10 + c:171
    Mod2 + XF86AudioNext

"deadbeef --toggle-pause"
    m:0x10 + c:172
    Mod2 + XF86AudioPlay

"deadbeef --stop"
    m:0x10 + c:174
    Mod2 + XF86AudioStop

# ===== gummy screen temp ===== 

"gummy start; gummy --brightness -10"
    m:0x50 + c:16
    Mod2+Mod4 + 7

"gummy start; gummy --brightness +10"
    m:0x50 + c:17
    Mod2+Mod4 + 8

"gummy start; gummy -t -500"
    m:0x50 + c:18
    Mod2+Mod4 + 9

"gummy start; gummy -t +500"
    m:0x50 + c:19
    Mod2+Mod4 + 0

